{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "animations": {
      "projectType": "library",
      "root": "projects/animations",
      "sourceRoot": "projects/animations/src",
      "prefix": "sky",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/animations/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/animations/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/animations/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/animations/src/test.ts",
            "tsConfig": "projects/animations/tsconfig.spec.json",
            "karmaConfig": "projects/animations/karma.conf.js",
            "codeCoverage": true,
            "codeCoverageExclude": [
              "**/fixtures/**",
              "projects/animations/src/test.ts"
            ],
            "styles": [
              "node_modules/@skyux/theme/css/sky.css",
              "node_modules/@skyux/theme/css/themes/modern/styles.css"
            ]
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/animations/**/*.ts",
              "projects/animations/**/*.html"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "animations",
  "cli": {
    "defaultCollection": "@angular-eslint/schematics"
  }
}
